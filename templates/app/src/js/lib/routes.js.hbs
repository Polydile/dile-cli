  {
    path: '/', 
    render: () => html`<{{appPrefix}}-page-home></{{appPrefix}}-page-home>`,
    enter: () => setTitle('Home')
  },
  {
    path: '/about', 
    render: () => html`<{{appPrefix}}-page-about></{{appPrefix}}-page-about>`,
    enter: async () => {
      setTitle('About us');
      await import('../components/pages/{{appPrefix}}-page-about.js');
    },
  },
  {
    path: '/login',
    render: () => html`<{{appPrefix}}-user-login></{{appPrefix}}-user-login>`,
    enter: async () => {
      setTitle('Login');
      await import('../components/user/{{appPrefix}}-user-login.js');
    },
  },
  {
    path: '/register',
    render: () => html`<{{appPrefix}}-user-register></{{appPrefix}}-user-register>`,
    enter: async () => {
      setTitle('Register');
      await import('../components/user/{{appPrefix}}-user-register.js');
    },
  },
];